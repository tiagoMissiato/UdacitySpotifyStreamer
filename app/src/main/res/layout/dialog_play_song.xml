<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="@dimen/default_margin"
    android:background="@android:color/transparent"
    tools:context="com.tiagomissiato.spotifystreamer.PlaySongActivity">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="450dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#EEEEEE">

        <LinearLayout
            android:id="@+id/image_container"
            android:layout_width="450dp"
            android:layout_height="450dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/song_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:transitionName="song_album_image"/>

        </LinearLayout>

        <View
            android:id="@+id/divider"
            android:layout_width="450dp"
            android:layout_height="2dp"
            android:layout_below="@+id/image_container"/>

        <RelativeLayout
            android:id="@+id/play_buttons"
            android:layout_below="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:padding="@dimen/element_space"
            >

            <ImageButton
                android:id="@+id/prev"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/ic_rewind"
                android:gravity="center_vertical"
                android:layout_toLeftOf="@+id/play_pause"
                android:layout_centerVertical="true"/>

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/play_pause"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_play"
                android:layout_margin="@dimen/element_space"
                android:layout_centerInParent="true"
                app:elevation="12dp"
                app:borderWidth="0dp"
                app:pressedTranslationZ="12dp"
                />

            <ProgressBar
                android:id="@+id/buffering_progress"
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:layout_marginTop="-34dp"
                android:layout_marginRight="1dp"
                android:elevation="8dp"
                android:visibility="gone"
                android:layout_centerInParent="true"
                />

            <ImageButton
                android:id="@+id/next"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/ic_forward"
                android:text="next"
                android:layout_toRightOf="@+id/play_pause"
                android:layout_centerVertical="true"
                />

        </RelativeLayout>

        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/play_buttons"
            />

        <TextView
            android:id="@+id/song_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/seekBar"
            android:layout_marginLeft="@dimen/default_margin"
            android:layout_alignParentLeft="true"/>

        <TextView
            android:id="@+id/song_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/seekBar"
            android:layout_marginRight="@dimen/default_margin"
            android:layout_alignParentRight="true"/>


        <TextView
            android:id="@+id/buffering"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/seekBar"
            android:gravity="center_horizontal"
            android:text="@string/buffering"
            android:visibility="gone"/>

        <LinearLayout
            android:id="@+id/song_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:padding="@dimen/element_space">

            <TextView
                android:id="@+id/song_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/seekBar"
                android:text="@string/buffering"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/song_album"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/seekBar"
                android:text="@string/buffering"
                android:textStyle="italic"/>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
